<div class="card-and-comments">
{{#if product}}
<div class="d-flex justify-content-center">
  <div class="mt-5 d-flex justify-content-center w-50">
  <div class="card mb-3">
    <img class="card-img-top" src={{product.image}} alt="фото чая">
    <div class="card-body">
      <h5 class="card-title">{{product.name}}</h5>
      <p class="card-text">{{product.descr}}</p>
      <p class="card-text"><small class="text-muted">Обновлено:{{product.updatedAt}}</small></p>
    </div>
  </div>
  </div>
</div>
  
{{/if}}

{{#if userId}}
  <div class="d-flex justify-content-center">
     <h4 class="mt-3">Последние добавленные комментарии</h4>
  </div>
 
    <div id="phoebe">
      {{#each comments}}
        <div class="d-flex flex-column-reverse">
          <div class="p-2 d-flex justify-content-center">
            <div class="comments mb-0 mt-0 bg-light">
              <h6 class="text-success">{{this.nickname}}</h6>
              <p class="text-muted comment-text">{{this.text}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

    <div class="d-flex justify-content-center mt-3">
      <form id="form" name="comment">
        <div class="d-flex justify-content-center">
          <input class="comment-input form-control" id='text' class="text" type="text" name="task" placeholder="Оставь свой комментарий" />
        </div>
        <div class="d-flex justify-content-center mt-3">
          <button class="btn btn-outline-success mb-10" data-change={{userId}} type="submit">Отправить</button>
        </div>
      </form>
    </div>
    
{{/if}}

</div>
